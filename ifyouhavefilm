    function ValidateEmail(mailVal) {
        if (/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(mailVal)) {
            jQuery('.ifyouhave-betterworld__form--container form').submit();
            jQuery('.ifyouhave-betterworld__form--error').html('Thank you! Form submitting').addClass('active');
            return (true)
        }
        jQuery('.ifyouhave-betterworld__form--error').html('We are sorry, you did not enter a valid email. Please retry above.').addClass('active');
        jQuery('#ifyouhave-betterworld .form-item').addClass('error');
        jQuery('#ifyouhave-betterworld .form-item').focus();
        return (false)
    }
    jQuery('#ifyouhave-betterworld input.email').attr('placeholder','Email address');
    jQuery('#ifyouhave-betterworld #edit-actions input.form-submit').on('click', function(e) {
        e.preventDefault();
        var emailVal = jQuery('#ifyouhave-betterworld input.email').val();
        ValidateEmail(emailVal);
    });

